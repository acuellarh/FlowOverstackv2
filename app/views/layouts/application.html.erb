<!DOCTYPE html>
<html>
  <head>
    <title>FlowOverstack</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container">
        <span class="navbar-brand mb-0 h1">FlowOverstack</span>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
      
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav ml-auto mx-2">
            <% if !(user_signed_in?) %> 
                <li class="nav-item active">                  
                  <%= link_to  "Ingresar", new_user_session_path, class: "nav-link"  %> 
                </li>  
                <li class="nav-item active">
                  <%= link_to  "Registrarse", new_user_registration_path, class: "nav-link" %> 
                </li>  
              <% else %>
                <li class="nav-item active">                
                  <%= link_to  "Salir", destroy_user_session_path, method: :delete, class: "nav-link"%>                 
                </li>  
            <% end %>              
          </ul>
          <form class="form-inline my-2 my-lg-0">            
            <%= form_tag  questions_path, method: :get do %>           
              <%= text_field_tag :search, params[:search], class: "form-control mr-sm-2", placeholder:"Buscar" %>
              <%= submit_tag "Buscar", :name => nil ,class: "btn btn-outline-success my-2 my-sm-0 " %>
            <% end %>            
          </form>
        </div>
      </div>
    </nav>
  </head>   

  <body>

    <div class="flash_wrapper">
      <%= render  "layouts/flash_messages" %>
    </div>  
    
    <%= yield %>
    
    <script>     
      $('.alert').fadeOut(4000)
    </script>
    
  </body>
</html>
