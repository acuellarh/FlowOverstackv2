
<% if @answer.errors.any? %>
  $("<%= escape_javascript(render 'shared/error', variable: @answer) %>").modal();
<% else %>  

  $("<%= escape_javascript(render 'layouts/flash_messages') %>").appendTo('.answer_list');
  $('.alert').fadeOut(4000)

  $("<%=escape_javascript(render(@answer))%>").appendTo('.answer_list')
  $("#put_answer_box").val('');
  $('.ans-quantity').html('<%= @question.answers.count %> ')

<% end %>  




